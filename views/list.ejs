<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Bertie’s Book Shop — List</title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>
  <body>
    <h1>Bertie’s Book Shop</h1>

    <table class="table books-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Book Name</th>
          <th>Price (£)</th>
        </tr>
      </thead>
      <tbody>
        <% availableBooks.forEach(function(book){ %>
          <tr>
            <td><%= book.id %></td>
            <td><%= book.name %></td>
            <td><%= book.price %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <p><a href="/addbook">Add a new book</a></p>
    <p><a href="/">Home</a></p>
  </body>
</html>
